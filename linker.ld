ENTRY(loader)
OUTPUT_ARCH(i386:i386)
OUTPUT_FORMAT(elf32-i386)

SECTIONS
{
	. = 0x0100000;

	.text ALIGN(0x1000) :
	{
		*(.multiboot)
		*(.text*)
		*(.rodata)
	}

	.data :
	{
		start_ctors = .;
		KEEP(*( .init_array ));
		KEEP(*(SORT_BY_INIT_PRIORITY( .init_array.* )));
		end_ctors = .;

		*(.data)
	}

	.bss :
	{
		*(.bss)
	}

	/DISCARD/ :
	{
		*(.fini_array*)
		*(.comment)
	}
}